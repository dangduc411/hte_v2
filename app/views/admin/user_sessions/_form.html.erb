<%= form_tag admin_user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, value=nil,option={"style" => "color: black"} %>
  </div>
  <div class="field" >
    <%= label_tag :password %><br />
    <%= password_field_tag :password, value=nil,option={"style" => "color: black"} %>
  </div>
  <div class="actions" >
    <%= submit_tag "Login" %>
  </div>
<% end %>